@model OfferVM
@{
    ViewData["Title"] = "OffersDetails";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}



<div class="container py-5">
    <main>
        <div class="py-5 text-center">
            <div class="section-title">
                <h2>Offer Details</h2>
            </div>
        </div>
        <div class="row g-5 mx-auto">
            <div class="col-md-7 col-lg-8 mx-auto">
                <form class="form-card" novalidate>
                    <div class="row g-3">
                        <div class="col"> <strong>Technician Name :</strong> @Model.TechnicianFullName</div>
                        <div class="col"> <strong>Technician Total Works :</strong> @Model.TechnicianTotalWorks</div>
                        <div class="col-12">
                            <label class="form-label"> <strong>Description :</strong></label>
                            <textarea id="w3review" rows="3" cols="70"
                                      asp-for="@Model.OfferDetails">
                                      
</textarea>
                        </div>

                        <div class="col-md-6"><strong>Price :</strong> @Model.Price</div>
                        <div class="col-md-6"><strong>Visit Date :</strong>@FormatterHelper.GetFormatedDate(Model.VisitDate)</div>
                    </div>

                    <hr class="my-4" />
                    <div class="d-flex justify-content-between mt-2">
                        <a asp-action="AcceptOffer" asp-controller="Offer" asp-route-requestID="@Model.OfferID" class="btn btn-success" data-mdb-ripple-init>Accept Offer</a>
                        <a asp-action="SendOffer" asp-controller="Offer" asp-route-requestID="@Model.OfferID" class="btn btn-danger" data-mdb-ripple-init>Reject Offer</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>