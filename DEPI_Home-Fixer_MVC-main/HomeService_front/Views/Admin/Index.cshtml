@model AdminIndexVM
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content" style="margin-top:30px">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Cities
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @Model.CitesCount
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Clients
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @Model.ClientsCount
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Technicians
                                    </div>
                                    <div class="row no-gutters align-items-center">
                                        <div class="col-auto">
                                            <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                                @Model.TechniciansCount
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Specializations
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @Model.SpecializationCount
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="gradient-custom-1 col-md-6">
                    <div class="mask d-flex">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="table-responsive bg-white">
                                        <div class="text-end"><a href="#">View All</a></div>
                                        <table class="table mb-0">
                                            <thead>
                                                <tr>
                                                    <th scope="col">City ID</th>
                                                    <th scope="col">City Name</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var city in Model.Cites)
                                                {
                                                    <tr>
                                                        <td>@city.CityId</td>
                                                        <td>@city.CityName</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="gradient-custom-1 col-md-6">
                    <div class="mask d-flex">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="table-responsive bg-white">
                                        <div class="text-end"><a href="#">View All</a></div>

                                        <table class="table mb-0">
                                            <thead>
                                                <tr>
                                                    <th scope="col">ID</th>
                                                    <th scope="col">Fname</th>
                                                    <th scope="col">Lname</th>
                                                    <th scope="col">Email</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var client in Model.Clients)
                                                {
                                                    <tr>
                                                        <td>@client.Id</td>
                                                        <td>@client.FirstName</td>
                                                        <td>@client.LastName</td>
                                                        <td>@client.Email</td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="gradient-custom-1 col-md-6 py-5">
                    <div class="mask d-flex">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="table-responsive bg-white">
                                        <div class="text-end"><a href="#">View All</a></div>

                                        <table class="table mb-0">
                                            <thead>
                                                <tr>
                                                    <th scope="col">ID</th>
                                                    <th scope="col">Fname</th>
                                                    <th scope="col">Lname</th>
                                                    <th scope="col">Email</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var technician in Model.Technicians)
                                                {
                                                    <tr>
                                                        <td>@technician.Id</td>
                                                        <td>@technician.FirstName</td>
                                                        <td>@technician.LastName</td>
                                                        <td>@technician.Email</td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="gradient-custom-1 col-md-6 py-5">
                    <div class="mask d-flex">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="table-responsive bg-white">
                                        <div class="text-end"><a href="#">View All</a></div>

                                        <table class="table mb-0">
                                            <thead>
                                                <tr>
                                                    <th scope="col">ID</th>
                                                    <th scope="col">Specialization Name</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var specialization in Model.Specializations)
                                                {
                                                    <tr>
                                                        <td>@specialization.SpecializationID</td>
                                                        <td>@specialization.SpecializationName</td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
